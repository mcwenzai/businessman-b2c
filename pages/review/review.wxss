.container {
  width: 100%;
  background: #f5f5f9;
}
.store {
  width: 94.6%;
  margin-left: 2.8%;
  background: #ffffff;
  margin-top: 20rpx;
  display: inline-block;
  border-radius: 20rpx;
}
.store .title {
  height: 100rpx;
  border-bottom: 1rpx solid #F3F4F8;
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  justify-content: space-between;
}
.store .title .left {
  font-size: 34rpx;
  color: #333333;
}
.store .title .right {
  font-size: 24rpx;
  color: #999999;
  margin-right: 24rpx;
}
.store .store_info {
  width: 94.6%;
  padding: 24rpx 2.8%;
  display: flex;
  align-items: flex-start;
}
.store .store_info image {
  width: 100rpx ;
  height: 100rpx;
  margin-right: 30rpx;
}
.store .store_info .carteen {
  height: 100rpx;
}

.store .store_info .carteen .titl {
  font-size: 32rpx;
  color: #333333;
  align-items: center;
}

.store .store_info .carteen .score {
  display: flex;
}

.store .store_info .carteen .score .ico {
  display: flex;
  align-items: center;
}

.store .store_info .carteen .score .tit {
  margin-right: 18rpx;
  align-items: center;
}

.store .store_info .carteen .score .tit text {
  color: #757575;
  font-size: 30rpx;
}

.store .store_info .carteen .score .ico .iconfont {
  color: #e54148;
  margin: 0 10rpx 0 0;
  font-size: 30rpx;
}
.review_text {
  width: 94.6%;
  margin-left: 2.8%;
  background: #fff;
  position: relative;
  height: 225rpx;
}
.review_text textarea {
  width: 96%;
  padding: 20rpx 2%;
  background: #f5f5f9;
  height: 205rpx;
  font-size: 26rpx;
  color: #999;
}
.review_text text {
  position: absolute;
  right: 6%;
  bottom: 0;
  color: #999;
  font-size: 26rpx;
}
.upload_contain {
  width: 94.6%;
  margin-left: 2.8%;
  background: #fff;
}
.upload_contain .upload_pic {
  width: 100%;
  border-top: 1rpx dashed #ddd;
  padding: 40rpx 0;
  display: flex;
}
.upload_contain .upload_pic .upload_btn {
  width: 200rpx;
  height: 148rpx;
  position: relative;
}
.upload_contain .upload_pic .upload_btn image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}


.store_grade_level {
  width: 94.6%;
  margin-left: 2.8%;
  box-sizing: border-box;
}
.store_grade_level .taste {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}

.store_grade_level .taste .wuliu {
  font-size: 28rpx;
  color: #757575;
}
.store_grade_level .taste .faces {
  margin-left: 16rpx;
}
.store_grade_level .taste .faces .iconfont {
  width: 44rpx;
  height: 44rpx;
}

.issue {
  width: 92%;
  padding: 30rpx 4%;
  background: #fff;
  border-top: 1rpx solid #f5f5f5;
}
.issue .issue_btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  -webkit-border-radius: 5rpx;
  -moz-border-radius: 5rpx;
  border-radius: 36rpx;
  background: linear-gradient(to right, #e44158, #e54148);
}

.van-cell {
   align-items: center;
}

.weui-half-screen-dialog {
   padding: 0 28rpx 40rpx 28rpx;
   
 }
 
.hd {
   display: inline;
}
.hd .hd__main {
   text-align: center;
   line-height: 88rpx;
   color: #666666;
 }
 
 .areabox {
   width: 100%;
   height: 400px;
   display: block;
 }
 
 .mainbd {
   background: #f3f4f8;
   border-radius: 8rpx;
   line-height: 80rpx;
   margin: 40rpx 28rpx;
 }

 .mainbd textarea {
    width: 100%;
    text-align: center;
 }
 
 .weui-textarea {
   color: #444444;
   height: 80rpx;
   line-height: 80rpx;
 }
 
 .ft {
   display: flex;
   justify-content: center;
   align-items: center;
 }

 .ft button {
   border-radius: 40rpx;
   width: 300rpx;
   height: 80rpx;
   line-height: 80rpx;
   font-size: 30rpx;
   margin-top: 40rpx;
   background: #f3f4f8;
 }
 
 .ft .btn1 {
   color: #333;
   
 }

 .ft .btn2 {
   color: #e54148;
 }

 .van-cell:after {
  border-bottom: 0rpx solid #ffffff;
}

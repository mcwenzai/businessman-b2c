.card {
  margin-bottom: 20rpx;
  color: #333;
  background: #fff;
  border-radius: 30rpx;
  margin-top: 20rpx;
}

.card .card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx;
}
.card .card-header .head .title {
  font-size: 32rpx;
  color: #333;
}
.head .iconfont {
  font-size: 32rpx;
}
.card .card-content {
  padding: 18rpx;
}
.card .card-content .content-wrap {
  display: flex;
  justify-content: space-between;
}
.card .card-content .content-wrap .flex-item {
  width: 140rpx;
  margin-right: 20rpx;
}
.card-content .content-wrap .flex-item image {
  width: 140rpx !important;
  height: 120rpx !important;
  border-radius: 4rpx;
}

.content-wrap .i-flex-item {
  flex: 1;
  min-width: 0;
}

.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.card .card-content .dot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card .card-content .dot .dot-item {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #d8d8d8;
}

.card .card-content .dot .dot-middle {
  margin: 0 10rpx;
}

.card .card-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 30rpx;
  font-size: 24rpx;
}



.card .card-footer .accual-pay {
  display: inline-block;
}

.van-count-down {
  color: #e54148;
}

.card .card-footer .accual-pay text {
  color: #E54148;
}


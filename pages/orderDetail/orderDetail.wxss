.cancel-order {
  position: relative;
  color: #666;
  width: 136rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  text-align: center;
}

.cancel-order::after {
  box-sizing: border-box;
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  border: 2rpx solid #b6b6b6;
  border-radius: 52rpx;
  pointer-events: none;
}


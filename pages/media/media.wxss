@import '/style/nodata.wxss';

page {
   background-color: #F3F4F8;
}
.media {
   width: 100vw;
   padding: 24rpx 36rpx;
   box-sizing: border-box;
}
.body {
   width: 100%;
   height: 500rpx;
   background-color: #fff;
   border-radius: 20rpx;
}

.body video {
   width: 100%;
   height: 400rpx;
   border-radius: 20rpx;
}

.body image {
   width: 100%;
   height: 400rpx;
   border-radius: 20rpx;
}

.body .title {
   text-align: left;
   margin: 20rpx;
}
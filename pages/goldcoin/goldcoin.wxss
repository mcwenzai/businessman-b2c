.currency .currency-block .first{
  display: flex;
  justify-content: center;
  line-height: 92rpx;
}

.currency .currency-block .currency-available {
  margin-top: 30rpx;
  color: #272727;
  font-size: 32rpx;
}

.currency .currency-block .currency-num {
  color: #E54148;
  font-size: 30rpx;
}

.currency .currency-block .block {
  display: flex;
  justify-content: center;
}

.block .company {
  color: #E54148;
  font-size: 62rpx;
}

.currency .currency-block .deduction {
  margin: 20rpx 0 80rpx 0;
  text-align: center;
  justify-content: center;
  display: flex;
}

.currency .currency-block .deduction .box1 {
  background: #f5f5f5;
  padding: 12rpx 60rpx;
  border-radius: 30px;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
}

.currency .currency-block .deduction .box1 .written {
  color: #444444;
}

.currency .currency-block .use {
  line-height: 120rpx;
}

.use .btn {
  background-color: #E54148;
  border-radius: 40rpx;
  color: #ffffff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.currency .currency-block .coupon {
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #333333;
  margin-top: 40rpx;
}

.currency .currency-block .coupon-text {
  color: #333333;
  padding: 0rpx 4rpx;
  text-align: center;
}

.currency .currency-block .red {
  padding: 0rpx 4rpx;
  color: #E54148;
  text-align: center;
}

.currency .currency-block .iconfont {
  font-size: 36rpx;
  font-weight: 500;
}
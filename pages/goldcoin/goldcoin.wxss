.personal {
  width: 100%;
  height: -webkit-fill-available;
  overflow: hidden;
}

.personal .basicInform {
  width: 100%;
  height: 480rpx;
}

.personal .basicInform .back-img {
  width: 100%;
  height: 480rpx;
}

.personal .basicInform .modify {
  width: 34rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 10rpx;
  font-size: 22rpx;
  border: none;
  background: transparent;
  padding: 0;
}

.personal .basicInform .modify::after {
  border: none;
}


.personal .basicInform .personalCon {
  width: 100%;
  padding-top: 30rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 3;
}

.currency {
  margin: 40rpx 20rpx 0 20rpx;
  height: 651rpx;
  border-radius: 32rpx;
  padding: 32rpx 42rpx 0;
  background-color: #fff;
  display: flex;
  justify-content: center;
}

.currency .currency-block {
  position: fixed;
  align-items: center;
  width: 600rpx;
}
